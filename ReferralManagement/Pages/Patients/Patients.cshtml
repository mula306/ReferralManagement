@page "/Patients"
@model ReferralManagement.Pages.Patients.PatientModel

<div class="recent--patients">
    <div class="title">
        <h2 class="section--title">Recent Patients</h2>
    </div>
    <a href="/Patient/Add" class="button"><i class="ri-add-line"></i>Add Patient</a>
    <div class="table">
        <table>
            <thead>
                <tr>
                    <th>PatientId</th>
                    <th>Last Name</th>
                    <th>First Name</th>
                    <th>Gender</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var patient in Model.Patients)
                {
                    <tr>
                        <td>@patient.PatientId</td>
                        <td>@patient.LastName</td>
                        <td>@patient.FirstName</td>
                        <td>@patient.Gender</td>
                        <td>
                            <span>
                                <a href="/Patient/Edit/@patient.PatientId" class="ri-edit-line edit"></a>
                                <a href="/Patient/Delete/@patient.PatientId" class="ri-delete-bin-line delete"></a>
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

