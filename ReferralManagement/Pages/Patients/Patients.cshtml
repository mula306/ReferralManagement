@page "/Patients"
@model ReferralManagement.Pages.PatientModel

<div class="recent--patients">
    <div class="title">
        <h2 class="section--title">Recent Patients</h2>
    </div>
    <div class="table">
        <table>
            <thead>
                <tr>
                    <th>PatientId</th>
                    <th>Last Name</th>
                    <th>First Name</th>
                    <th>Gender</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var patient in Model.Patients)
                {
                    <tr>
                        <td>@patient.PatientId</td>
                        <td>@patient.LastName</td>
                        <td>@patient.FirstName</td>
                        <td>@patient.Gender</td>
                        <td>
                            <a href="/Patient/Edit/@patient.PatientId" class="btn btn-primary">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

