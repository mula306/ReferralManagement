@page "/ReferralForms"
@model ReferralManagement.Pages.ReferralFormsModel
@{
}
<div class="recent--patients">
    <div class="title">
        <h2 class="section--title">Referral Forms</h2>
    </div>
    <a href="/ReferralForm/Add" class="button"><i class="ri-add-line"></i>New Referral Form</a>
    <div class="table">
        <table>
            <thead>
                <tr>
                    <th>ReferralId</th>
                    <th>Form Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var dynamicReferral in Model.DynamicReferrals)
                {
                    <tr>
                        <td>@dynamicReferral.DynamicReferralId</td>
                        <td>@dynamicReferral.ReferralName</td>
                        <td>
                            <span>
                                <a href="/ReferralForm/Edit/@dynamicReferral.DynamicReferralId" class="ri-edit-line edit"></a>
                                <a href="/ReferralForm/Form/@dynamicReferral.DynamicReferralId" class="ri-survey-line"></a>
                                <i class="ri-delete-bin-line delete"></i>
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>